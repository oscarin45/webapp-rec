@import '../framework7/framework7.min.css'
@import 'font-awesome/font-awesome.min.css'
@import '../../css/classes'


class(pf,cl,ini,val)
  for s in 1..ini
    .{pf}{val*s}
      {cl} unit(val*s, px) !important
      
.GH
	font-family 'Grand Hotel', cursive
      
h1,h2,h3,h4,h5,pre
	padding 0px
	margin 0px
body
	background #5b5b5b
	
.clear
	clear: both
	display: block
	overflow: hidden
	visibility: hidden
	width: 0
	height: 0

class(p,padding,5,5)
class(pl,padding-left,5,10)
class(pr,padding-right,5,10)
class(mr,margin-right,5,5)
class(mb,margin-bottom,5,5)
class(w,width,50,10)
class(h,height,15,10)
class(s,font-size,6,10)
class(s,font-size,24,1)
class(br,border-radius,5,10)


img
	max-width 100%
	
.c28
	color #28b6c5
.bc28
	background #28b6c5
.c0
	color #000
.cF
	color #FFF
.bcF
	background #FFF
	
.bc
	background-size cover !important
	
.tl
	text-align left

.tc
	text-align center

.tr
	text-align right

.tj
	text-align justify

.r
	position relative

.dtc
	display table-cell
.dt
	display table
.vm
	vertical-align middle

.ww
	width 100%

.b
	font-weight bold
.n
	font-weight normal

.dib
	display inline-block
	
.vt
	vertical-align top
	
.of
	text-decoration line-through

.nav
	background #f7f7f8
	
.abt
	position absolute
	top 0
	left 0
	width 100%
	height 100%

.cont
	max-width 700px
	margin 0 auto
	height 100%
	position relative
	overflow hidden
	
.navbar,.toolbar
	background #5b5b5b
	a
		color #FFF
.panel
	&, .list-block ul, .card
		background #5b5b5b
		&, a
			color #FFF
		
.toolbar .icons a
	display inline-block
	border 2px solid #FFF
	padding 5px
	width 25px
	text-align center
	
.ico
	span
		line-height 180%
		display inline-block
		min-width 40px
		min-height 40px
		border-radius 50%
		background #acacac
		vertical-align top
		margin 0 5px
		cursor pointer
		&.activo,&:hover
			background #28b6c5
		&.fa
			color #FFF
		&.fa-twitter
			background #28b3c4
		&.fa-facebook
			background #324eaa
		&.fa-pinterest
			background #d34242

#form
	input[type=submit]
		border none
	textarea
		border 1px solid #333
		margin 10px 0

#cart
	input[type=number].br
		border 1px solid #333
		margin 10px 0
		
.popup-registro.popup.modal-in:not(.tablet-fullscreen)
	height 100%
	width 100%
	left 0
	top 0
	margin-left 0
	margin-top 0
	
#pay
	label
		position relative
		display block
		margin 10px 0
		img
			display block
		input
			position absolute
			top 50%
			left 5px
			margin-top -6px
			

.br
	border 1px solid #e1e1e1

